<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet author="svenglauser" id="pays-create-table">
        <createTable tableName="PAYS">
            <column autoIncrement="true" name="ID" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_PAYS"/>
            </column>

            <column name="CREATION_DATE" type="DATETIME"/>
            <column name="CREATION_USER" type="VARCHAR(255)"/>
            <column name="MODIFICATION_DATE" type="DATETIME"/>
            <column name="MODIFICATION_USER" type="VARCHAR(255)"/>

            <column name="ABREVIATION" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="NOM" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint columnNames="NOM" constraintName="UK_PAYS_NOM" tableName="PAYS"/>
        <addUniqueConstraint columnNames="ABREVIATION" constraintName="UK_PAYS_ABREVIATION" tableName="PAYS"/>
    </changeSet>
</databaseChangeLog>